###############################################################
###########################FILES###############################
###############################################################
source dc_files
{
	type            = mysql
	sql_host        = localhost
	sql_user        = dcsearch
	sql_pass        = dc4pass
	sql_db          = dcsearch
	sql_port        = 3306
	sql_query_pre   = SET NAMES utf8
	sql_query_pre   = delete from files where deleted=1
	sql_query_pre 	= REPLACE INTO sphinx SELECT 1, ifnull(MAX(id),0) FROM files
	sql_query 		= select id, name, extension, unix_timestamp(starttime) as starttime from files where id>=$start and id<=$end and id<=(SELECT last_id FROM sphinx WHERE id=1) and deleted=0
	sql_query_range = select 1,last_id from sphinx where id=1
	sql_range_step  = 100000
	sql_attr_str2ordinal = extension
}

source dc_files_delta : dc_files
{
	sql_query_pre   = SET NAMES utf8
	sql_query 		= select id, name, extension, unix_timestamp(starttime) as starttime from files where id>(SELECT last_id FROM sphinx WHERE id=1) and deleted=0
	sql_query_range = 
	sql_range_step  = 0
	sql_query_killlist = select id from files where deleted=1
	#sql_query_post  = delete from files where deleted=1
	sql_attr_str2ordinal = extension
	
}

index dc_files
{
	source = dc_files
	path = /var/db/sphinxsearch/data/dc_files
	docinfo = extern
	morphology = stem_enru
	charset_type = utf-8
	enable_star = 1
	min_prefix_len = 5
}

index dc_files_delta : dc_files
{
	source = dc_files_delta
	path = /var/db/sphinxsearch/data/dc_files_delta
}
